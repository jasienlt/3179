{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Number of unicorn start-ups around the world (Sep 2022)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/jasienlt/3179/main/json/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "params": [{
      "name": "Continent_selection",
      "bind": {
      "input": "select",
      "options": [
      null,
      "North America",
      "South America",
      "Europe",
      "Africa",
      "Asia",
      "Oceania"
      ],
      "labels":[
      "Show All",
      "North America",
      "South America",
      "Europe",
      "Africa",
      "Asia",
      "Oceania"
      ],
      "name": "Continent Selection: "
      }
      },
      {
        "name": "Number of start-ups",
        "value": 0,
        "bind": {
        "input": "range",
        "min": 0,
        "max": 1000,
        "step": 10,
        "name": "Minimum number of start-ups: "
        }
        }
    ],  
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/jasienlt/3179/main/data/startups.csv"
          },
          "key": "Country",
          "fields": ["Count"]
        }
      },
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        },
      {"aggregate": [{
        "op":"sum",
        "field": "Count",
        "as": "Number of start-ups"
      }],
        "groupby":["Country"] }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Number of start-ups",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Count", "type": "quantitative"}
      ]
    }
  }